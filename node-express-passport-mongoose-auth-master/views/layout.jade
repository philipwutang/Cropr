doctype html
html
  head
    // Standard Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    // Site Properties
    title Cropr - Photo Resizing Made Easy
    link(rel='icon', href='http://www.clker.com/cliparts/0/0/8/b/11949945231683916384crop.svg.hi.png')
    link(rel='stylesheet', type='text/css', href='/stylesheets/semantic.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/master.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/jquery.Jcrop.min.css')
    script(src='/scripts/jquery.min.js')
    script(src='/scripts/visibility.min.js')
    script(src='/scripts/accordion.js')
    script(src='/scripts/sidebar.min.js')
    script(src='/scripts/transition.min.js')
    script(src='/scripts/script.js')
    script(src='/scripts/jquery.Jcrop.min.js')
    // <script src="script/image_crop.js"></script>
    script(src='/scripts/script.js')
  body
    // Page Contents
    .pusher
      .ui.inverted.vertical.masthead.center.aligned.segment
        .ui.container
          .ui.large.secondary.inverted.pointing.menu
            a.toc.item
              i.sidebar.icon
            a.active.item(href='#') Cropr
            a.item Guide
            a.item(href='https://github.com/philipwutang/Cropr') Source
            .right.item
              a.ui.inverted.button(href='http://polar.me/') Visit Polar
        .ui.text.container
          h1.ui.inverted.header Cropr
          h2 Photo Resizing Made Easy
          a.ui.huge.primary.button(href='#cropr')
            | Begin
            i.right.arrow.icon
      a(name='cropr')
      .ui.vertical.stripe.segment
        .ui.container
          h3.header Crop Away
          .ui.raised.very.padded.container.segment
            .ui.three.column.grid
              .four.wide.column
                .ui.vertical.accordion.menu
                  .item
                    a.active.title
                      i.dropdown.icon
                      | Size
                    .active.content
                      .ui.form
                        .grouped.fields
                          .field
                            .ui.right.labeled.input.fluid
                              input#width(type='text', placeholder='Width')
                              .ui.basic.label px
                          .field
                            .ui.right.labeled.input.fluid
                              input#height(type='text', placeholder='Height')
                              .ui.basic.label px
                      .ui.form
                        .grouped.fields
                          .ui.checkbox
                            input#freeform(type='checkbox', name='freeform')
                            label Freeform
                  .item
                    a.active.title
                      i.dropdown.icon
                      | Presets
                    .active.content
                      .ui
                        .grouped.fields
                          .field.size-selector
                            #square.ui.radio.checkbox
                              input(type='radio', id='1:1', name='ratio')
                              label 1:1 (Square)
                          .field.size-selector
                            #3by2.ui.radio.checkbox
                              input(type='radio', id='3:2', name='ratio')
                              label 3:2
                          .field.size-selector
                            #4by3.ui.radio.checkbox
                              input(type='radio', id='4:3', name='ratio')
                              label 4:3
                          .field.size-selector
                            #hd.ui.radio.checkbox
                              input(type='radio', id='16:9', name='ratio')
                              label 16:9
                label.compact.ui.basic.button
                  i.upload.icon
                  | Upload
                  input#uploadImage(type='file', accept='image/*', style='display:none')
                input#file(type='file', style='display:none')
                button.compact.ui.basic.button
                  i.icon.download
                  | Download
                button#setImageSize.compact.ui.basic.button
                  i.icon.square
                  | Set
                button.compact.ui.basic.button
                  i.icon.crop
                  | Crop
              .twelve.wide.column
                .ui.segment
                  img#cropbox(src='resources/image.jpg', style='width: 100% !important')
      .ui.inverted.vertical.footer.segment
        .ui.container
          .ui.stackable.inverted.divided.equal.height.stackable.grid
            .three.wide.column
              h4.ui.inverted.header Polar
              .ui.inverted.link.list
                a.item(href='#') About Us
                a.item(href='#') Toronto
            .three.wide.column
              h4.ui.inverted.header Help
              .ui.inverted.link.list
                a.item(href='#') FAQ
                a.item(href='#') Source Code
            .seven.wide.column
              h4.ui.inverted.header Made by Polar
              p With Love
              i.heart.icon
